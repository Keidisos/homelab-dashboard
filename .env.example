# ============================================
# LAB DASHBOARD - CONFIGURATION API
# Copy this file to .env and fill in your values
# ============================================

# PROXMOX VE
# Create an API token in Proxmox: Datacenter > Permissions > API Tokens
PROXMOX_HOST=https://192.168.1.100:8006
PROXMOX_TOKEN_ID=root@pam!dashboard
PROXMOX_TOKEN_SECRET=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# PORTAINER (Docker Management)
# Create an API key in Portainer: Settings > Users > API keys
PORTAINER_HOST=https://192.168.1.100:9443
PORTAINER_API_KEY=your_portainer_api_key

# JELLYFIN
# Get API key in Jellyfin: Dashboard > API Keys
JELLYFIN_HOST=http://192.168.1.100:8096
JELLYFIN_API_KEY=your_jellyfin_api_key

# PTERODACTYL
# Create an API key in Pterodactyl: Account > API Credentials
PTERODACTYL_HOST=https://panel.example.com
PTERODACTYL_API_KEY=your_pterodactyl_api_key

# UGREEN NAS (UGOS) - Optional
UGOS_HOST=http://192.168.1.100:9999
UGOS_USERNAME=admin
UGOS_PASSWORD=your_password

# JELLYSEERR
# Get API key in Jellyseerr: Settings > General
JELLYSEERR_HOST=http://192.168.1.100:5055
JELLYSEERR_API_KEY=your_jellyseerr_api_key

# QBITTORRENT
QBITTORRENT_HOST=http://192.168.1.100:8080
QBITTORRENT_USERNAME=admin
QBITTORRENT_PASSWORD=your_password

# DASHDOT (System monitoring - for CPU temperature)
# Install Dashdot on your Proxmox host: https://getdashdot.com/
DASHDOT_HOST=http://192.168.1.100:3001

# GENERAL SETTINGS
POLLING_INTERVAL=30000

# ============================================
# PUBLIC URLS (accessible client-side for external links)
# These are used to create "Open" buttons in the dashboard
# ============================================
NEXT_PUBLIC_PROXMOX_HOST=https://192.168.1.100:8006
NEXT_PUBLIC_PORTAINER_HOST=https://192.168.1.100:9443
NEXT_PUBLIC_JELLYFIN_HOST=http://192.168.1.100:8096
NEXT_PUBLIC_PTERODACTYL_HOST=https://panel.example.com
NEXT_PUBLIC_RADARR_HOST=http://192.168.1.100:7878
NEXT_PUBLIC_SONARR_HOST=http://192.168.1.100:8989
NEXT_PUBLIC_QBITTORRENT_HOST=http://192.168.1.100:8080
NEXT_PUBLIC_JELLYSEERR_HOST=http://192.168.1.100:5055
NEXT_PUBLIC_NAS_HOST=http://192.168.1.100:9999
